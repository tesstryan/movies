<h1>Add a new movie review:</h1>


<%= form_tag(reviews_url, method: 'post') do %>

  <div>
    <%= label_tag :review %><br />
    <%= text_field_tag :review %>
  </div>

  <div>
    <%= label_tag :stars %><br />
    <%= number_field_tag :stars %>
  </div>

 <div>
    <%= label_tag :movies_id %><br />
    <% movies = Movie.all.order("title") %>
    <%= select_tag "movies_id",
                   options_from_collection_for_select(movies, :id, :title) %>
  </div>

  <div>
    <%= submit_tag "Submit!" %>
  </div>

<% end %>
